# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# CORS Settings
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://unitedtacticaldefense.com

# Database Configuration
DB_PATH=../unitedDT.db

# Redis Configuration (for distributed caching and rate limiting)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379

# Rate Limiting Configuration
RATE_LIMITING_ENABLED=true
RATE_LIMIT_DEFAULT=500
RATE_LIMIT_AUTH=50
RATE_LIMIT_API=300
RATE_LIMIT_WINDOW_MS=60000

# Caching Configuration
CACHING_ENABLED=true
CACHE_DEFAULT_TTL=60
CACHE_LONG_TTL=3600

# Feature Flags
FEATURE_DISTRIBUTED_RATE_LIMITING=false
FEATURE_RESPONSE_COMPRESSION=true
FEATURE_METRIC_COLLECTION=true

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# External Appointment System
FORWARD_APPOINTMENTS=false
EXTERNAL_APPOINTMENT_API=https://backend.leadconnectorhq.com/appengine/appointment

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5
LOG_CONSOLE_ENABLED=true 