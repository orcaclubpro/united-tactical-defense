{
  "name": "united-tactical-defense",
  "version": "1.0.0",
  "description": "United Tactical Defense Training Website",
  "main": "src/server.js",
  "scripts": {
    "start": "NODE_ENV=production node src/server.js",
    "server": "nodemon src/server.js",
    "client": "cd frontend && npm start",
    "dev": "NODE_ENV=development nodemon src/server.js",
    "simple": "NODE_ENV=development node src/simple-server.js",
    "install-all": "npm install && cd frontend && npm install",
    "build": "cd frontend && npm run build",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:api": "mocha tests/api/**/*.test.js",
    "test:services": "mocha tests/services/**/*.test.js",
    "test:integration": "mocha tests/integration/**/*.test.js",
    "test:performance": "node tests/performance/api-load-test.js",
    "test:frontend": "cd frontend && npm test",
    "test:e2e": "mocha tests/e2e/**/*.test.js",
    "test:all": "npm run test && npm run test:frontend",
    "test:runner": "node run-tests.js",
    "test:report": "node run-tests.js --coverage --output test-report.json",
    "test:db-pooling": "node src/tests/pool-test.js",
    "migrate": "node src/data/migrations/run-migrations.js up",
    "migrate:down": "node src/data/migrations/run-migrations.js down"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.1",
    "express-validator": "^7.2.1",
    "form-data": "^4.0.2",
    "geoip-lite": "^1.4.9",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "node-schedule": "^2.1.1",
    "puppeteer": "^24.5.0",
    "redis": "^4.6.13",
    "sqlite3": "^5.1.7",
    "ua-parser-js": "^1.0.40"
  },
  "devDependencies": {
    "autocannon": "^7.14.0",
    "chai": "^4.5.0",
    "chai-http": "^4.4.0",
    "concurrently": "^8.2.2",
    "mocha": "^10.8.2",
    "nodemon": "^2.0.22",
    "nyc": "^15.1.0",
    "selenium-webdriver": "^4.18.1",
    "sinon": "^15.2.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "author": "",
  "license": "ISC"
}
